<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <h1 class="col-6 offset-3">Login to wanderlust</h1>
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div>
        <label for="username" class="form-label">username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control md-3"
          required
        />
      </div>

      <div>
        <label for="password" class="form-label">password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mb-3 mt-3">Login</button>
    </form>
  </div>
</div>
